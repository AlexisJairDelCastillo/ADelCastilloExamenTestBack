@model ML.Pedido
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 style="text-align:center"><strong>Pedidos</strong></h1>
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-1">
            @Html.ActionLink("", "Form", "Pedido", htmlAttributes: new { @class = "btn btn-success" })
        </div>
    </div>

    <br />

    @if (Model != null)
    {
        <div class="row">
            <table class="table table-responsive table-hover table-striped">
                <thead>
                    <tr>
                        <th>IdPedido</th>
                        <th>IdCliente</th>
                        <th>Nombre</th>
                        <th>Apellidos</th>
                        <th>Total $</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Pedido pedido in Model.Pedidos)
                    {
                        <tr>
                            <td>@pedido.IdPedido</td>
                            <td>@pedido.Cliente.IdCliente</td>
                            <td>@pedido.Cliente.Nombre</td>
                            <td>@pedido.Cliente.Apellidos</td>
                            <td>@pedido.Total</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        
    }
</div>